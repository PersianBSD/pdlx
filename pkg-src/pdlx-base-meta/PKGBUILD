# Maintainer: PdLinuXOS <dev@pdlx.local>
pkgname=pdlx-base-meta
pkgver=1.0.0
pkgrel=3
pkgdesc="PdLinuXOS base meta-package: minimal but practical defaults for fresh installs"
arch=(any)
url="https://example.com/pdlx"
license=('custom:none')  # متاپکیج سورسی ندارد؛ اگر خواستی GPL3 نگه دار

depends=(
  # --- Core base ---
  base
  linux
  linux-firmware
  dracut
  # --- Shell & basics ---
  bash-completion
  vim
  less
  nano

  # --- Networking ---
  networkmanager
  dhcpcd          # به‌جای dhcp-client مبهم → پرسش تعاملی حذف می‌شود
  openssh
  curl
  wget

  # --- Filesystems / Disk tools ---
  btrfs-progs
  dosfstools
  e2fsprogs
  parted
  util-linux

  # --- Compression / Archive ---
  tar
  gzip
  xz
  unzip
  zip
)

optdepends=(
  # Initramfs generators (یکی را در نصب انتخاب کن)
  'mkinitcpio: initramfs generation (default on Arch)'
  'dracut: alternative initramfs generator'
  # Mirror management
  'reflector: auto-update mirrorlist'
  # Virtualization (هر کدام برای محیط خودش)
  'qemu-guest-agent: KVM/QEMU/Proxmox'
  'open-vm-tools: VMware/ESXi'
  'virtualbox-guest-utils-nox: VirtualBox'
  'cloud-init: فقط برای ایمیج‌های Cloud'
  'pv: نمایش progress در pipe/copy'
)

source=()
sha256sums=()

package() {
  : # meta only
}
